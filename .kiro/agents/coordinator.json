{
  "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
  "name": "coordinator",
  "description": "Main agent for echoes.io - Multi-POV storytelling platform orchestrator",
  "prompt": "file://../prompts/default-prompt.md",
  "tools": ["read", "write", "shell", "web_search", "web_fetch", "introspect", "thinking"],
  "allowedTools": ["read", "shell", "web_search", "web_fetch", "introspect", "thinking"],
  "toolsSettings": {
    "write": {
      "allowedPaths": [
        "profile/**",
        "workflows/**",
        "*.md",
        ".kiro/**"
      ]
    },
    "shell": {
      "autoAllowReadonly": true
    }
  },
  "toolAliases": {},
  "resources": [
    "file://README.md",
    "file://.kiro/**/*.md"
  ]
}
